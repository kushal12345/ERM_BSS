{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "settings": {
    "tailwindcss": {
      "callees": ["twMerge", "createTheme"],
      "classNameRegex": "^(className(Name)|theme)?$"
    }
  },
  "rules": {
    "tailwindcss/classnames-order": "off",
    "tailwindcss/no-custom-classname": "warn"
  }
}
